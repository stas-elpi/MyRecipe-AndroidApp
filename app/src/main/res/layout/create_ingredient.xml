<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <EditText
            android:layout_marginTop="30dp"
            android:id="@+id/input0"
            android:layout_width="match_parent"
            android:hint="Write Ingredient Name"
            android:layout_height="50dp"/>


        <EditText
            android:layout_marginTop="30dp"
            android:id="@+id/input1"
            android:layout_width="match_parent"
            android:hint="Write Ingredient Calories"
            android:layout_height="50dp"/>

        <EditText
            android:layout_marginTop="30dp"
            android:id="@+id/input2"
            android:layout_width="match_parent"
            android:hint="Write Ingredient Weight in Grams"
            android:layout_height="50dp"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="110dp"
            android:layout_marginTop="80dp"
            android:layout_marginEnd="50dp"
            android:layout_marginBottom="50dp"
            android:onClick="getSelectedIngredient"
            android:text="Create Ingredient" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="110dp"
            android:layout_marginTop="80dp"
            android:layout_marginEnd="50dp"
            android:layout_marginBottom="50dp"
            android:onClick="getSelectedRecipeWindow"
            android:text="Go to Recipe Window" />


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>